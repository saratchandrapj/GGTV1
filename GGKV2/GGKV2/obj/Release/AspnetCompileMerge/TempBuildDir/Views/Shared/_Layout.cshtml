<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title>Grow Green Technologies</title>
	@Styles.Render("~/Content/css")
	@Scripts.Render("~/bundles/modernizr")
	<script src="~/Scripts/jquery-3.4.1.min.js"></script>

</head>
<body style="background-color:#EEEEEE">
	@*DC3D24*@
	<div class="row">
		<div class="col-lg-6 text-left" style="line-height:0.5">
			<p style="font-size:34px;padding-bottom:0px;padding-left: 102px;padding-top: 7px;color:#60A043"><strong>GROW GREEN TECHNOLOGIES</strong></p>
			<p style="font-size: 27px;padding-left: 295px;color:cornflowerblue">Engineers & Contractors</p>
		</div>
		<div class="col-lg-6">
			<img src="~/Images/Logo.png" style="width:25%;height:100%;margin-left:352px;padding-top:2.5px;" />
		</div>
	</div>
	<br />
	<div class="container" style="padding-top:0px;height:50px;">
		<nav class="navbar navbar-expand-lg navbar-light" style="padding-right:0rem;background-color:#ffffff">
			@*<a class="navbar-brand" href="#">Navbar</a>*@
			<button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
				<span class="navbar-toggler-icon"></span>
			</button>

			<div class="collapse navbar-collapse" id="navbarSupportedContent">
				<ul class="navbar-nav mr-auto">
					<li class="nav-item active">
						@Html.ActionLink("Home", "Index", "Home", new { @class = "nav-link", @style = "color:#60A043;font-weight:bold" })
						@*<a class="nav-link" href="#">Home <span class="sr-only">(current)</span></a>*@
					</li>
					<li class="nav-item">
						@Html.ActionLink("About Us", "About", "Home", new { @class = "nav-link", @style = "color:#60A043;font-weight:bold" })
						@*<a class="nav-link" href="#">Link</a>*@
					</li>
					<li class="nav-item">
						@Html.ActionLink("Princples", "Princples", "Home", new { @class = "nav-link", @style = "color:#60A043;font-weight:bold" })
						@*<a class="nav-link" href="#">Link</a>*@
					</li>
					<li class="nav-item">
						@Html.ActionLink("Our Expertise", "OurExpertise", "Home", new { @class = "nav-link", @style = "color:#60A043;font-weight:bold" })
						@*<a class="nav-link" href="#">Link</a>*@
					</li>
					<li class="nav-item dropdown">
						<a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" style="color:#60A043;font-weight:bold">
							Services
						</a>
						<div class="dropdown-menu" aria-labelledby="navbarDropdown">
							<a class="dropdown-item" href="../Home/Fab" style="color:cornflowerblue">Fabrication & Erection</a>
							<a class="dropdown-item" href="../Home/Maintenance" style="color:#60A043">Maintenance Works</a>
							<a class="dropdown-item" href="../Home/HeavyMachinery" style="color:cornflowerblue">Heavy Machinery</a>
							<a class="dropdown-item" href="../Home/AntiCorrosive" style="color:#60A043">Industrial Anti-Corrosive protection coating</a>
							<a class="dropdown-item" href="../Home/SolarWorks" style="color:cornflowerblue">Solar Works</a>
							<a class="dropdown-item" href="../Home/CivilWorks" style="color:#60A043">Misc. Civil Works</a>
							<a class="dropdown-item" href="../Home/CeilingandRoofingworks" style="color:cornflowerblue">Ceiling and Roofing works</a>
							<a class="dropdown-item" href="../Home/EpoxyFlooring" style="color:#60A043">Epoxy Flooring</a>
							@*<div class="dropdown-divider"></div>
								<a class="dropdown-item" href="#">Something else here</a>*@
						</div>
					</li>

					<li class="nav-item">
						@Html.ActionLink("Career", "Career", "Home", new { @class = "nav-link", @style = "color:#60A043;font-weight:bold" })
						@*<a class="nav-link" href="#">Link</a>*@
					</li>
					<li class="nav-item">
						@Html.ActionLink("Contact", "Contact", "Home", new { @class = "nav-link", @style = "color:#60A043;font-weight:bold" })
						@*<a class="nav-link" href="#">Link</a>*@
					</li>
				</ul>
				@*<form class="form-inline my-2 my-lg-0">
						<input class="form-control mr-sm-2" type="search" placeholder="Search" aria-label="Search">
						<button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
					</form>*@
			</div>
		</nav>
	</div>
	<div class="container body-content" style="padding-bottom:50px;padding-top:20px">
		@RenderBody()
		<hr />
		<footer>
			<p style="color:#60A043"><strong> &copy; @DateTime.Now.Year - GROW GREEN TECHNOLOGIES </strong></p>
		</footer>
	</div>

	@Scripts.Render("~/bundles/jquery")
	@Scripts.Render("~/bundles/bootstrap")
	@RenderSection("scripts", required: false)
</body>
</html>
