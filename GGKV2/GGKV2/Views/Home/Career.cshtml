


@{
	ViewBag.Title = "Career";
}
<div class="text-center" style="background-color:#ffffff;color:#201976">

	@using (Html.BeginForm("UploadFile", "Home", FormMethod.Post, new { enctype = "multipart/form-data" }))
	{

		<h2 style="color:cornflowerblue">Career</h2>
		<h6>Your Details</h6>
			<table class="table table-striped table-bordered" style="align-content:center">
				<tr class="col-sm-12">
					<td>
						Name
					</td>
					<td>
						<input type="text" name="Name" placeholder="Name" required />
					</td>
				</tr>
				<tr class="col-sm-12">
					<td>
						Area of Expertice
					</td>
					<td>
						<input type="text" name="Area" placeholder="Area of Expertice" required />
					</td>
				</tr>
				<tr class="col-sm-12">
					<td>
						Experience in relavent field
					</td>
					<td>
						<input type="text" name="Exp" placeholder="Experience in relavent field" required />
					</td>
				</tr>
			</table>
			
			<p>
				<label class="col-sm-4" for="file">Upload file:</label>
				<input class="col-sm-4" type="file" name="file" id="file" required />
				<input class="col-sm-4" type="submit" value="Upload" required />
			</p>
			<br />
			@ViewBag.Message
	}
</div>
